<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Caption"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Preview image between caption and meta -->
    <ImageView
        android:id="@+id/postImage"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:contentDescription="@null"
        app:layout_constraintTop_toBottomOf="@id/tvCaption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Like button and meta info row -->
    <LinearLayout
        android:id="@+id/likeMetaRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/postImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnLike"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/btn_star_big_off"
            android:contentDescription="Like"
            android:padding="4dp"
            android:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvMeta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="by user • 0 likes • 0 comments"
            android:textSize="12sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Toggle comments button -->
    <Button
        android:id="@+id/btnToggleComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Comments"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/likeMetaRow"
        app:layout_constraintBottom_toTopOf="@id/commentsSection"
        app:layout_goneMarginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Comments section (initially hidden) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commentsSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnToggleComments"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Comments RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Comment input section -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/commentInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Add a comment..."
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/commentsRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnPostComment"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCommentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnPostComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/commentInputLayout"
            app:layout_constraintBottom_toBottomOf="@id/commentInputLayout"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Ensure proper bottom constraint - comments section or toggle button is the bottom -->
    <!-- The commentsSection will be the bottom when visible, btnToggleComments when hidden -->

</androidx.constraintlayout.widget.ConstraintLayout>