{
  "$id": "https://modmycar.app/schemas/post.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Post",
  "type": "object",
  "required": ["id", "userId", "media", "createdAt"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "description": "UUID/KSUID of the post" },
    "userId": { "type": "string", "description": "ID of author" },
    "carId": { "type": ["string", "null"], "description": "Optional: car linked to the post" },
    "caption": { "type": "string", "maxLength": 1000 },
    "media": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "url"],
        "additionalProperties": false,
        "properties": {
          "type": { "type": "string", "enum": ["image", "audio"] },
          "url": { "type": "string", "format": "uri" },
          "durationSec": { "type": ["number", "null"] },
          "width": { "type": ["integer", "null"] },
          "height": { "type": ["integer", "null"] },
          "sizeBytes": { "type": ["integer", "null"] }
        }
      }
    },
    "likesCount": { "type": "integer", "minimum": 0, "default": 0 },
    "commentsCount": { "type": "integer", "minimum": 0, "default": 0 },
    "visibility": { "type": "string", "enum": ["public"], "default": "public" },
    "status": { "type": "string", "enum": ["active", "deleted"], "default": "active" },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": ["string", "null"], "format": "date-time" }
  }
}
